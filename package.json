{
  "name": "todos",
  "version": "1.0.0",
  "description": "to do app",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cd todo && npm run build",
    "install-client": "cd todo npm install",
    "heroku-postbuild": "cd todo/ && npm install --only=dev && NODE_ENV=development npm install --no-shrinkwrap && npm run build",
    "start": "node server.js",
    "client": "cd todo && yarn start",
    "dev": "concurrently -n 'server,client' -c 'red,green'  \"node server.js\" \"npm run client\""
  },
  "author": "Ruchi kushwaha",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "http-errors": "^1.8.0",
    "mongoose": "^5.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.0.1"
  }
}
